Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/github

# Global defaults 
# ssh picks the first option it finds
# so we put these last so they are fallbacks when not specified
Host *
    # Security settings
    IdentitiesOnly yes                    
    PubkeyAuthentication yes              
    PasswordAuthentication no             
    ChallengeResponseAuthentication no    

    # Connection settings
    ServerAliveInterval 60                
    ServerAliveCountMax 3                 
    ConnectTimeout 30                     
    AddKeysToAgent yes                    

    # Protocol settings
    Protocol 2                            
    Compression yes                       
    
    # Host key verification
    StrictHostKeyChecking ask             
    CheckHostIP yes                       
    
    # Default connection settings
    Port 22                               
    ForwardAgent no                       
    ForwardX11 no                         