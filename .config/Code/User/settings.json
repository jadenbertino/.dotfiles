{
  "workbench.editor.closeOnFileDelete": true,
  "workbench.panel.defaultLocation": "right",
  "workbench.layoutControl.enabled": false,
  "editor.mouseWheelZoom": true,
  "editor.suggest.insertMode": "replace",
  "editor.minimap.enabled": false,
  "css.lint.emptyRules": "ignore",
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,
  "editor.guides.bracketPairs": true,
  "editor.guides.bracketPairsHorizontal": false,
  "editor.guides.highlightActiveBracketPair": false,
  "editor.renderWhitespace": "all",
  "editor.stickyTabStops": true,
  "extensions.ignoreRecommendations": false,
  "editor.linkedEditing": true,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "emmet.syntaxProfiles": {
    "xml": {
      "attr_quotes": "single"
    },
    "html": {
      "attr_quotes": "single"
    },
    "js": {
      "attr_quotes": "single",
      "self_closing_tag": true
    },
    "jsx": {
      "attr_quotes": "single",
      "self_closing_tag": true
    }
  },
  "scss.lint.emptyRules": "ignore",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.colorDecorators": false,
  "editor.accessibilitySupport": "off",
  "editor.inlineSuggest.enabled": true,
  "search.exclude": {
    "**/dist": true,
    "**/lib": true
  },
  "redhat.telemetry.enabled": false,
  "files.autoSave": "afterDelay",
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "remote.autoForwardPortsSource": "hybrid",
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "security.workspace.trust.untrustedFiles": "open",
  "cursor.cpp.disabledLanguages": ["scminput"],
  "window.menuBarVisibility": "compact",

  // Formatting
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.tabSize": 4
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "editor.formatOnPaste": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.sortImports": "explicit"
  },
  "prettier.semi": false,
  "prettier.configPath": ".prettierrc.cjs",
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,
  "prettier.useEditorConfig": false,
  "prettier.printWidth": 120,
  "prettier.trailingComma": "all",
  "editor.tabSize": 2,
  "bookmarks.useWorkaroundForFormatters": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.quoteStyle": "single",
  "typescript.preferences.quoteStyle": "single",
  "html.completion.attributeDefaultValue": "singlequotes",

  // Visuals
  "files.exclude": {
    // hide files/folders in explorer
    ".playwright-mcp": true,
    "**/__pycache__": true,
    "**/.venv": true,
    "**/node_modules": true
  },
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "One Dark Pro Mix",
  "editor.fontFamily": "'JetBrainsMonoNL Nerd Font', Consolas, 'Courier New', monospace",
  "indentRainbow.indicatorStyle": "light",
  "indentRainbow.lightIndicatorStyleLineWidth": 1,
  "indentRainbow.colors": [
    "rgba(255,255,64,0.3)",
    "rgba(127,255,127,0.3)",
    "rgba(255,127,255,0.3)",
    "rgba(79,236,236,0.3)"
  ],
  "indentRainbow.excludedLanguages": ["plaintext"],
  "todohighlight.keywordsPattern": "‚≠ê",
  "scm.diffDecorationsGutterWidth": 2,
  "scm.diffDecorationsGutterAction": "none",

  // Terminal
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Ubuntu (WSL)": {
      "path": "C:\\WINDOWS\\System32\\wsl.exe",
      "args": ["-d", "Ubuntu"]
    }
  },
  "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
  "terminal.integrated.env.linux": {},

  // Git
  "git.suggestSmartCommit": false,
  "git.openRepositoryInParentFolders": "never",
  "git.confirmSync": false,
  "git.repositoryScanIgnoredFolders": ["node_modules", "external/**/*"],
  "git.detectSubmodules": false
}
